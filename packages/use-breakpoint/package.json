{
	"$schema": "https://json.schemastore.org/package",
	"name": "@tobiasfoerg/use-breakpoint",
	"version": "0.0.2-alpha.1",
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/tobiasfoerg/react-libs",
		"directory": "packages/use-breakpoint"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"prebuild": "pnpm clean",
		"build": "tsup src/index.ts --format cjs,esm --dts --sourcemap --external react,tailwindcss --clean",
		"clean": "rimraf dist",
		"publint": "publint",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/react": "^18.2.29",
		"publint": "^0.2.4",
		"react": "^18.2.0",
		"rimraf": "^5.0.5",
		"tailwindcss": "^3.3.3",
		"tsup": "^7.2.0"
	},
	"peerDependencies": {
		"react": ">=18",
		"tailwindcss": ">=3.2"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": false
		},
		"tailwindcss": {
			"optional": false
		}
	},
	"packageManager": "pnpm@8.9.2",
	"engines": {
		"node": ">=18",
		"pnpm": ">=8"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
