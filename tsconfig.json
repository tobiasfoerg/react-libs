{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"strict": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["scripts"]
}
